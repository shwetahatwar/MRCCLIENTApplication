<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".ui.main.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/materialPutaway"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="350dp"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/auditAssetButtonBackground"
                app:cardCornerRadius="4dp">


                <ImageView
                    android:id="@+id/info_image"
                    android:src="@mipmap/ic_audit"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                 />
                <ImageView
                    android:id="@+id/arrow"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_navigate_next_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingLeft="80dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/info_text"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="65dp"
                    android:layout_toRightOf="@+id/info_image"
                    android:layout_alignParentTop="true"
                    android:text="Material Putaway"
                    android:textColor="@color/reportButtonTitle"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/total"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="65dp"
                        android:layout_alignParentTop="true"
                        android:text="Total:"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/totalText"
                        android:layout_marginTop="45dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/putaway"
                        android:layout_marginTop="62dp"
                        android:layout_marginLeft="65dp"
                        android:layout_toRightOf="@+id/info_image"
                        android:layout_alignParentTop="true"
                        android:text="Putaway:"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/putawayText"
                        android:layout_marginTop="62dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/pending"
                    android:layout_marginTop="77dp"
                    android:layout_marginLeft="65dp"
                    android:layout_toRightOf="@+id/info_image"
                    android:layout_alignParentTop="true"
                    android:text="Pending:"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/pendingText"
                    android:layout_marginTop="77dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/materialPicking"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="350dp"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/auditAssetButtonBackground"
                app:cardCornerRadius="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/pickingImage"
                    android:src="@mipmap/ic_picking"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
                <ImageView
                    android:id="@+id/pickingArrow"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_navigate_next_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/pickingLable"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="65dp"
                    android:layout_toRightOf="@+id/info_image"
                    android:layout_alignParentTop="true"
                    android:text="Material Picking"
                    android:textColor="@color/reportButtonTitle"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/totalPicking"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="65dp"
                        android:layout_alignParentTop="true"
                        android:text="Total:"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/totalPickingValue"
                        android:layout_marginTop="45dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pickingLable1"
                        android:layout_marginTop="62dp"
                        android:layout_marginLeft="65dp"
                        android:layout_toRightOf="@+id/info_image"
                        android:layout_alignParentTop="true"
                        android:text="Picked:"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/pickingValue"
                        android:layout_marginTop="62dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pickingPending"
                        android:layout_marginTop="77dp"
                        android:layout_marginLeft="65dp"
                        android:layout_toRightOf="@+id/info_image"
                        android:layout_alignParentTop="true"
                        android:text="Pending:"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/pickingPendingValue"
                        android:layout_marginTop="77dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:id="@+id/physicalStock"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="350dp"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/auditAssetButtonBackground"
                app:cardCornerRadius="4dp">


                <ImageView
                    android:id="@+id/physicalStockImage"
                    android:src="@mipmap/jobcard_details"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
                <ImageView
                    android:id="@+id/physicalStockArrow"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_navigate_next_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/physicalStockLable"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="65dp"
                    android:layout_toRightOf="@+id/info_image"
                    android:layout_alignParentTop="true"
                    android:text="Physical Stock Verification"
                    android:textColor="@color/reportButtonTitle"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

<!--                    <TextView-->
<!--                        android:id="@+id/scannedLable"-->
<!--                        android:layout_marginTop="45dp"-->
<!--                        android:layout_marginLeft="65dp"-->
<!--                        android:layout_alignParentTop="true"-->
<!--                        android:text="Scanned:"-->
<!--                        android:textSize="15dp"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content" />-->

<!--                    <TextView-->
<!--                        android:id="@+id/scannedValue"-->
<!--                        android:layout_marginTop="45dp"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="1234567891234567"-->
<!--                        android:layout_weight="1"-->
<!--                        android:gravity="right"-->
<!--                        android:textStyle="bold" />-->

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/vendorMaterialScan"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="350dp"
                android:layout_height="120dp"
                app:cardBackgroundColor="@color/auditAssetButtonBackground"
                app:cardCornerRadius="4dp">


                <ImageView
                    android:id="@+id/vendorMaterialScanImage"
                    android:src="@mipmap/ic_material_details"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
                <ImageView
                    android:id="@+id/vendorMaterialScanArrow"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_navigate_next_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/vendorMaterialScanLable"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="65dp"
                    android:layout_toRightOf="@+id/info_image"
                    android:layout_alignParentTop="true"
                    android:text="Vendor Material Scan"
                    android:textColor="@color/reportButtonTitle"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/versiontext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="app version 1.0.0"
                android:textAlignment="center"
                android:textColor="@color/assetDetailsButtonTitle" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>